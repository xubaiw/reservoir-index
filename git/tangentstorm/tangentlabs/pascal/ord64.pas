{$mode fpc}
{ The fpc docs say that int64/qword is not an ordinal type.
    http://www.freepascal.org/docs-html/ref/refsu5.html
   I don't see any reason this should be the case. }
program ord64;
var i : integer; big : qword = 4294967291; // 2^32-5
begin
  for i := 1 to 10 do begin
    writeln(pred(big), ' ', big, ' ', succ(big)); inc(big);
  end;
  for i := 1 to 10 do begin
    writeln(pred(big), ' ', big, ' ', succ(big)); dec(big);
  end;
end.

    [Limits.HasMultiequalizer (S.index P)] : P.obj (Opposite.op X) ‚ü∂ Limits.multiequalizer (S.index P) :=
  Limits.multiequalizer.lift _ _ (fun I => P.map I.f.op)
    (by
      intro I
      dsimp' only [‚Üê index, ‚Üê relation.fst, ‚Üê relation.snd]
      simp only [P.map_comp, op_comp, ‚Üê I.w])


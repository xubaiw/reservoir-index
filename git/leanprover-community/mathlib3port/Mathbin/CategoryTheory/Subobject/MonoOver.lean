  {  }

/-- Isomorphic objects have equivalent `mono_over` categories.
-/
@[simps]
def mapIso {A B : C} (e : A ‚âÖ B) : MonoOver A ‚âå MonoOver B where
  Functor := map e.Hom
  inverse := map e.inv
  unitIso :=
    ((mapComp _ _).symm ‚â™‚â´
        eqToIso
            (by
              simp ) ‚â™‚â´
          map_id).symm
  counitIso :=
    (mapComp _ _).symm ‚â™‚â´
      eqToIso
          (by
            simp ) ‚â™‚â´
        map_id


variable {C : Type u} [Category.{v} C] [ConcreteCategory.{v} C] {J : Type v} [SmallCategory J] (F : J ‚•§ C)
  [PreservesColimit F (forget C)]

theorem Concrete.from_union_surjective_of_is_colimit {D : Cocone F} (hD : IsColimit D) :
    let ff : (Œ£j : J, F.obj j) ‚Üí D.x := fun a => D.Œπ.app a.1 a.2
    Function.Surjective ff :=
  by
  intro ff
  let E := (forget C).mapCocone D
  let hE : is_colimit E := is_colimit_of_preserves _ hD
  let G := Types.colimitCocone.{v, v} (F ‚ãô forget C)
  let hG := Types.colimitCoconeIsColimit.{v, v} (F ‚ãô forget C)
  let T : E ‚âÖ G := hE.unique_up_to_iso hG
  let TX : E.X ‚âÖ G.X := (cocones.forget _).mapIso T
  suffices Function.Surjective (TX.hom ‚àò ff) by
    intro a
    obtain ‚ü®b, hb‚ü© := this (TX.hom a)
    refine' ‚ü®b, _‚ü©
    apply_fun TX.inv  at hb
    change (TX.hom ‚â´ TX.inv) (ff b) = (TX.hom ‚â´ TX.inv) _ at hb
    simpa only [TX.hom_inv_id] using hb
  have : TX.hom ‚àò ff = fun a => G.Œπ.app a.1 a.2 := by
    ext a
    change (E.Œπ.app a.1 ‚â´ hE.desc G) a.2 = _
    rw [hE.fac]
  rw [this]
  rintro ‚ü®‚ü®j, a‚ü©‚ü©
  exact ‚ü®‚ü®j, a‚ü©, rfl‚ü©

theorem Concrete.is_colimit_exists_rep {D : Cocone F} (hD : IsColimit D) (x : D.x) :
    ‚àÉ (j : J)(y : F.obj j), D.Œπ.app j y = x := by
  obtain ‚ü®a, rfl‚ü© := concrete.from_union_surjective_of_is_colimit F hD x
  exact ‚ü®a.1, a.2, rfl‚ü©

theorem Concrete.colimit_exists_rep [HasColimit F] (x : colimit F) : ‚àÉ (j : J)(y : F.obj j), colimit.Œπ F j y = x :=
  Concrete.is_colimit_exists_rep F (colimit.isColimit _) x

theorem Concrete.is_colimit_rep_eq_of_exists {D : Cocone F} {i j : J} (hD : IsColimit D) (x : F.obj i) (y : F.obj j)
    (h : ‚àÉ (k : _)(f : i ‚ü∂ k)(g : j ‚ü∂ k), F.map f x = F.map g y) : D.Œπ.app i x = D.Œπ.app j y := by
  let E := (forget C).mapCocone D
  let hE : is_colimit E := is_colimit_of_preserves _ hD
  let G := Types.colimitCocone.{v, v} (F ‚ãô forget C)
  let hG := Types.colimitCoconeIsColimit.{v, v} (F ‚ãô forget C)
  let T : E ‚âÖ G := hE.unique_up_to_iso hG
  let TX : E.X ‚âÖ G.X := (cocones.forget _).mapIso T
  apply_fun TX.hom
  swap
  ¬∑ suffices Function.Bijective TX.hom by
      exact this.1
    rw [‚Üê is_iso_iff_bijective]
    apply is_iso.of_iso
    
  change (E.Œπ.app i ‚â´ TX.hom) x = (E.Œπ.app j ‚â´ TX.hom) y
  erw [T.hom.w, T.hom.w]
  obtain ‚ü®k, f, g, h‚ü© := h
  have : G.Œπ.app i x = (G.Œπ.app k (F.map f x) : G.X) := Quot.sound ‚ü®f, rfl‚ü©
  rw [this, h]
  symm
  exact Quot.sound ‚ü®g, rfl‚ü©

theorem Concrete.colimit_rep_eq_of_exists [HasColimit F] {i j : J} (x : F.obj i) (y : F.obj j)
    (h : ‚àÉ (k : _)(f : i ‚ü∂ k)(g : j ‚ü∂ k), F.map f x = F.map g y) : colimit.Œπ F i x = colimit.Œπ F j y :=
  Concrete.is_colimit_rep_eq_of_exists F (colimit.isColimit _) x y h

section FilteredColimits

variable [IsFiltered J]

theorem Concrete.is_colimit_exists_of_rep_eq {D : Cocone F} {i j : J} (hD : IsColimit D) (x : F.obj i) (y : F.obj j)
    (h : D.Œπ.app _ x = D.Œπ.app _ y) : ‚àÉ (k : _)(f : i ‚ü∂ k)(g : j ‚ü∂ k), F.map f x = F.map g y := by
  let E := (forget C).mapCocone D
  let hE : is_colimit E := is_colimit_of_preserves _ hD
  let G := Types.colimitCocone.{v, v} (F ‚ãô forget C)
  let hG := Types.colimitCoconeIsColimit.{v, v} (F ‚ãô forget C)
  let T : E ‚âÖ G := hE.unique_up_to_iso hG
  let TX : E.X ‚âÖ G.X := (cocones.forget _).mapIso T
  apply_fun TX.hom  at h
  change (E.Œπ.app i ‚â´ TX.hom) x = (E.Œπ.app j ‚â´ TX.hom) y at h
  erw [T.hom.w, T.hom.w] at h
  replace h := Quot.exact _ h
  suffices
    ‚àÄ (a b : Œ£j, F.obj j) (h : EqvGen (Limits.Types.Quot.Rel.{v, v} (F ‚ãô forget C)) a b),
      ‚àÉ (k : _)(f : a.1 ‚ü∂ k)(g : b.1 ‚ü∂ k), F.map f a.2 = F.map g b.2
    by
    exact this ‚ü®i, x‚ü© ‚ü®j, y‚ü© h
  intro a b h
  induction h
  case eqv_gen.rel x y hh =>
    obtain ‚ü®e, he‚ü© := hh
    use y.1, e, ùüô _
    simpa using he.symm
  case eqv_gen.refl x =>
    use x.1, ùüô _, ùüô _, rfl
  case eqv_gen.symm x y _ hh =>
    obtain ‚ü®k, f, g, hh‚ü© := hh
    use k, g, f, hh.symm
  case eqv_gen.trans x y z _ _ hh1 hh2 =>
    obtain ‚ü®k1, f1, g1, h1‚ü© := hh1
    obtain ‚ü®k2, f2, g2, h2‚ü© := hh2
    let k0 : J := is_filtered.max k1 k2
    let e1 : k1 ‚ü∂ k0 := is_filtered.left_to_max _ _
    let e2 : k2 ‚ü∂ k0 := is_filtered.right_to_max _ _
    let k : J := is_filtered.coeq (g1 ‚â´ e1) (f2 ‚â´ e2)
    let e : k0 ‚ü∂ k := is_filtered.coeq_hom _ _
    use k, f1 ‚â´ e1 ‚â´ e, g2 ‚â´ e2 ‚â´ e
    simp only [F.map_comp, comp_apply, h1, ‚Üê h2]
    simp only [‚Üê comp_apply, ‚Üê F.map_comp]
    rw [is_filtered.coeq_condition]

theorem Concrete.is_colimit_rep_eq_iff_exists {D : Cocone F} {i j : J} (hD : IsColimit D) (x : F.obj i) (y : F.obj j) :
    D.Œπ.app i x = D.Œπ.app j y ‚Üî ‚àÉ (k : _)(f : i ‚ü∂ k)(g : j ‚ü∂ k), F.map f x = F.map g y :=
  ‚ü®Concrete.is_colimit_exists_of_rep_eq _ hD _ _, Concrete.is_colimit_rep_eq_of_exists _ hD _ _‚ü©

theorem Concrete.colimit_exists_of_rep_eq [HasColimit F] {i j : J} (x : F.obj i) (y : F.obj j)
    (h : colimit.Œπ F _ x = colimit.Œπ F _ y) : ‚àÉ (k : _)(f : i ‚ü∂ k)(g : j ‚ü∂ k), F.map f x = F.map g y :=

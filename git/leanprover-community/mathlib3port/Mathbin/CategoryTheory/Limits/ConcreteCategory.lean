theorem Concrete.wide_pushout_exists_rep {B : C} {Œ± : Type _} {X : Œ± ‚Üí C} (f : ‚àÄ j : Œ±, B ‚ü∂ X j)
    [HasWidePushout.{v} B X f] [PreservesColimit (wideSpan B X f) (forget C)] (x : widePushout B X f) :
    (‚àÉ y : B, head f y = x) ‚à® ‚àÉ (i : Œ±)(y : X i), Œπ f i y = x := by
  obtain ‚ü®_ | j, y, rfl‚ü© := concrete.colimit_exists_rep _ x
  ¬∑ use y
    
  ¬∑ right
    use j, y
    

theorem Concrete.wide_pushout_exists_rep' {B : C} {Œ± : Type _} [Nonempty Œ±] {X : Œ± ‚Üí C} (f : ‚àÄ j : Œ±, B ‚ü∂ X j)
    [HasWidePushout.{v} B X f] [PreservesColimit (wideSpan B X f) (forget C)] (x : widePushout B X f) :
    ‚àÉ (i : Œ±)(y : X i), Œπ f i y = x := by
  rcases concrete.wide_pushout_exists_rep f x with (‚ü®y, rfl‚ü© | ‚ü®i, y, rfl‚ü©)
  ¬∑ inhabit Œ±
    use arbitrary _, f _ y
    simp only [‚Üê arrow_Œπ _ (arbitrary Œ±), comp_apply]
    
  ¬∑ use i, y
    

end WidePushout


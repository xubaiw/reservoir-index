def Cofork.IsColimit.ofExistsUnique {t : Cofork f g}
    (hs : ‚àÄ s : Cofork f g, ‚àÉ! d : t.x ‚ü∂ s.x, Cofork.œÄ t ‚â´ d = Cofork.œÄ s) : IsColimit t := by
  choose d hd hd' using hs

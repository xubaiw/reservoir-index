instance Hom.inhabited : Inhabited (Hom none none) :=
  ‚ü®Hom.id (none : WidePushoutShape J)‚ü©

attribute [local tidy] tactic.case_bash

instance subsingleton_hom (j j' : WidePushoutShape J) : Subsingleton (j ‚ü∂ j') :=

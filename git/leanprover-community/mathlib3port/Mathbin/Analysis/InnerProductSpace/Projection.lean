    (K : Submodule ùïú E) [CompleteSpace K] :
    reflection (K.map (f.toLinearEquiv : E ‚Üí‚Çó[ùïú] E')) = f.symm.trans ((reflection K).trans f) :=
  LinearIsometryEquiv.ext <| reflection_map_apply f K


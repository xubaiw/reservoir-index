    (f : E ‚âÉ‚Çó·µ¢[ùïú] E') (p : Submodule ùïú E) [CompleteSpace p] (x : E') :
    (orthogonalProjection (p.map (f.toLinearEquiv : E ‚Üí‚Çó[ùïú] E')) x : E') = f (orthogonalProjection p (f.symm x)) := by
  simpa only [‚Üê f.coe_to_linear_isometry, ‚Üê f.apply_symm_apply] using
    (f.to_linear_isometry.map_orthogonal_projection p (f.symm x)).symm

/-- The orthogonal projection onto the trivial submodule is the zero map. -/
@[simp]

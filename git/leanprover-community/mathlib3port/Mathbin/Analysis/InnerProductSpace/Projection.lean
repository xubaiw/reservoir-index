  rw [‚Üê orthogonal_projection_eq_self_iff, reflection_apply, sub_eq_iff_eq_add', ‚Üê two_smul ùïú, ‚Üê two_smul' ùïú]
  refine' (smul_right_injective E _).eq_iff
  exact two_ne_zero


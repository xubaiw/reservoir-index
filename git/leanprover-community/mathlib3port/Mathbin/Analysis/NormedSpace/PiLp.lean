/-!
### The uniformity on finite `L^p` products is the product uniformity

In this section, we put the `L^p` edistance on `pi_Lp p Œ±`, and we check that the uniformity
coming from this edistance coincides with the product uniformity, by showing that the canonical
map to the Pi type (with the `L^‚àû` distance) is a uniform embedding, as it is both Lipschitz and
antiLipschitz.

We only register this emetric space structure as a temporary instance, as the true instance (to be
registered later) will have as uniformity exactly the product uniformity, instead of the one coming
from the edistance (which is equal to it, but not defeq). See Note [forgetful inheritance]
explaining why having definitionally the right uniformity is often important.
-/


variable [‚àÄ i, EmetricSpace (Œ± i)] [‚àÄ i, PseudoEmetricSpace (Œ≤ i)] [Fintype Œπ]

include fact_one_le_p

/-- Endowing the space `pi_Lp p Œ≤` with the `L^p` pseudoedistance. This definition is not
satisfactory, as it does not register the fact that the topology and the uniform structure coincide
with the product one. Therefore, we do not register it as an instance. Using this as a temporary
pseudoemetric space instance, we will show that the uniform structure is equal (but not defeq) to
the product one, and then register an instance in which we replace the uniform structure by the
product one using this pseudoemetric space and `pseudo_emetric_space.replace_uniformity`. -/
def pseudoEmetricAux : PseudoEmetricSpace (PiLp p Œ≤) :=
  have pos : 0 < p := lt_of_lt_of_le‚Çì zero_lt_one fact_one_le_p.out
  { edist := fun f g => (‚àë i, edist (f i) (g i) ^ p) ^ (1 / p),
    edist_self := fun f => by
      simp [edist, Ennreal.zero_rpow_of_pos Pos, Ennreal.zero_rpow_of_pos (inv_pos.2 Pos)],
    edist_comm := fun f g => by
      simp [edist, edist_comm],
    edist_triangle := fun f g h =>
      calc
        (‚àë i, edist (f i) (h i) ^ p) ^ (1 / p) ‚â§ (‚àë i, (edist (f i) (g i) + edist (g i) (h i)) ^ p) ^ (1 / p) := by
          apply Ennreal.rpow_le_rpow _ (one_div_nonneg.2 <| le_of_lt‚Çì Pos)
          refine' Finset.sum_le_sum fun i hi => _
          exact Ennreal.rpow_le_rpow (edist_triangle _ _ _) (le_trans‚Çì zero_le_one fact_one_le_p.out)
        _ ‚â§ (‚àë i, edist (f i) (g i) ^ p) ^ (1 / p) + (‚àë i, edist (g i) (h i) ^ p) ^ (1 / p) :=
          Ennreal.Lp_add_le _ _ _ fact_one_le_p.out
         }

/-- Endowing the space `pi_Lp p Œ±` with the `L^p` edistance. This definition is not satisfactory,
as it does not register the fact that the topology and the uniform structure coincide with the
product one. Therefore, we do not register it as an instance. Using this as a temporary emetric
space instance, we will show that the uniform structure is equal (but not defeq) to the product
one, and then register an instance in which we replace the uniform structure by the product one
using this emetric space and `emetric_space.replace_uniformity`. -/
def emetricAux : EmetricSpace (PiLp p Œ±) :=
  { pseudoEmetricAux p Œ± with
    eq_of_edist_eq_zero := fun f g hfg => by
      have pos : 0 < p := lt_of_lt_of_le‚Çì zero_lt_one fact_one_le_p.out
      let h := pseudo_emetric_aux p Œ±
      have h : edist f g = (‚àë i, edist (f i) (g i) ^ p) ^ (1 / p) := rfl
      simp [h, Ennreal.rpow_eq_zero_iff, Pos, asymm Pos, Finset.sum_eq_zero_iff_of_nonneg] at hfg
      exact funext hfg }

attribute [local instance] PiLp.emetricAux PiLp.pseudoEmetricAux

theorem lipschitz_with_equiv : LipschitzWith 1 (PiLp.equiv p Œ≤) := by
  have pos : 0 < p := lt_of_lt_of_le‚Çì zero_lt_one fact_one_le_p.out
  have cancel : p * (1 / p) = 1 := mul_div_cancel' 1 (ne_of_gt‚Çì Pos)
  intro x y
  simp only [edist, forall_prop_of_true, one_mul‚Çì, Finset.mem_univ, Finset.sup_le_iff, Ennreal.coe_one]
  intro i
  calc edist (x i) (y i) = (edist (x i) (y i) ^ p) ^ (1 / p) := by
      simp [‚Üê Ennreal.rpow_mul, cancel, -one_div]_ ‚â§ (‚àë i, edist (x i) (y i) ^ p) ^ (1 / p) := by
      apply Ennreal.rpow_le_rpow _ (one_div_nonneg.2 <| le_of_lt‚Çì Pos)
      exact Finset.single_le_sum (fun i hi => (bot_le : (0 : ‚Ñù‚â•0‚àû) ‚â§ _)) (Finset.mem_univ i)

theorem antilipschitz_with_equiv : AntilipschitzWith ((Fintype.card Œπ : ‚Ñù‚â•0 ) ^ (1 / p)) (PiLp.equiv p Œ≤) := by
  have pos : 0 < p := lt_of_lt_of_le‚Çì zero_lt_one fact_one_le_p.out
  have nonneg : 0 ‚â§ 1 / p := one_div_nonneg.2 (le_of_lt‚Çì Pos)
  have cancel : p * (1 / p) = 1 := mul_div_cancel' 1 (ne_of_gt‚Çì Pos)
  intro x y
  simp [edist, -one_div]
  calc (‚àë i, edist (x i) (y i) ^ p) ^ (1 / p) ‚â§ (‚àë i, edist (PiLp.equiv p Œ≤ x) (PiLp.equiv p Œ≤ y) ^ p) ^ (1 / p) := by
      apply Ennreal.rpow_le_rpow _ nonneg
      apply Finset.sum_le_sum fun i hi => _
      apply Ennreal.rpow_le_rpow _ (le_of_lt‚Çì Pos)
      exact
        Finset.le_sup
          (Finset.mem_univ
            i)_ = ((Fintype.card Œπ : ‚Ñù‚â•0 ) ^ (1 / p) : ‚Ñù‚â•0 ) * edist (PiLp.equiv p Œ≤ x) (PiLp.equiv p Œ≤ y) :=
      by
      simp only [nsmul_eq_mul, Finset.card_univ, Ennreal.rpow_one, Finset.sum_const,
        Ennreal.mul_rpow_of_nonneg _ _ nonneg, ‚Üê Ennreal.rpow_mul, cancel]
      have : (Fintype.card Œπ : ‚Ñù‚â•0‚àû) = (Fintype.card Œπ : ‚Ñù‚â•0 ) := (Ennreal.coe_nat (Fintype.card Œπ)).symm
      rw [this, Ennreal.coe_rpow_of_nonneg _ nonneg]

theorem aux_uniformity_eq : ùì§ (PiLp p Œ≤) = @uniformity _ (Pi.uniformSpace _) := by
  have A : UniformInducing (PiLp.equiv p Œ≤) :=
    (antilipschitz_with_equiv p Œ≤).UniformInducing (lipschitz_with_equiv p Œ≤).UniformContinuous
  have : (fun x : PiLp p Œ≤ √ó PiLp p Œ≤ => ((PiLp.equiv p Œ≤) x.fst, (PiLp.equiv p Œ≤) x.snd)) = id := by
    ext i <;> rfl
  rw [‚Üê A.comap_uniformity, this, comap_id]

end


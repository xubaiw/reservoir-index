/-- pseudometric space instance on the product of finitely many psuedometric spaces, using the
`L^p` distance, and having as uniformity the product uniformity. -/
instance [‚àÄ i, PseudoMetricSpace (Œ≤ i)] : PseudoMetricSpace (PiLp p Œ≤) := by
  /- we construct the instance from the pseudo emetric space instance to avoid checking again that
    the uniformity is the same as the product uniformity, but we register nevertheless a nice formula
    for the distance -/
  have pos : 0 < p := lt_of_lt_of_le‚Çì zero_lt_one fact_one_le_p.out
  refine'
    PseudoEmetricSpace.toPseudoMetricSpaceOfDist (fun f g => (‚àë i, dist (f i) (g i) ^ p) ^ (1 / p)) (fun f g => _)
      fun f g => _
  ¬∑ simp [PiLp.edist_eq, Ennreal.rpow_eq_top_iff, asymm Pos, Pos, Ennreal.sum_eq_top_iff, edist_ne_top]
    
  ¬∑ have A : ‚àÄ i : Œπ, i ‚àà (Finset.univ : Finset Œπ) ‚Üí edist (f i) (g i) ^ p ‚â† ‚ä§ := fun i hi => by
      simp [lt_top_iff_ne_top, edist_ne_top, le_of_lt‚Çì Pos]
    simp [dist, -one_div, PiLp.edist_eq, ‚Üê Ennreal.to_real_rpow, Ennreal.to_real_sum A, dist_edist]
    


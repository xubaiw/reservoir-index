    f =o[ùìù b] g ‚Üî (f ‚àò e) =o[ùìù (e.symm b)] (g ‚àò e) := by
  unfold is_o
  exact forall‚ÇÇ_congr‚Çì fun c hc => e.is_O_with_congr hb

end LocalHomeomorph


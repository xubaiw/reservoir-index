  by
  rw [frobenius_poly, RingHom.map_add, RingHom.map_mul, RingHom.map_pow, map_C, map_X, eq_int_cast, Int.cast_coe_nat,
    frobenius_poly_rat]
  apply Nat.strong_induction_on‚Çì n

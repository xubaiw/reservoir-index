  refine' fun t ht => infi_le_of_le (fun n => f '' t n ‚à™ range f·∂ú) (infi_le_of_le _ _)
  ¬∑ rw [‚Üê Union_union, Set.union_comm, ‚Üê inter_subset, ‚Üê image_Union, ‚Üê image_preimage_eq_inter_range]
    exact image_subset _ ht
    

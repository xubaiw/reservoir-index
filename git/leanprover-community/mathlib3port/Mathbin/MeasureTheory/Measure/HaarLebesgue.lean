/-!
### Strict subspaces have zero measure
-/


/-- If a set is disjoint of its translates by infinitely many bounded vectors, then it has measure
zero. This auxiliary lemma proves this assuming additionally that the set is bounded. -/
theorem add_haar_eq_zero_of_disjoint_translates_aux {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] {s : Set E} (u : ‚Ñï ‚Üí E) (sb : Bounded s)
    (hu : Bounded (Range u)) (hs : Pairwise (Disjoint on fun n => {u n} + s)) (h's : MeasurableSet s) : Œº s = 0 := by
  by_contra h
  apply lt_irrefl‚Çì ‚àû
  calc ‚àû = ‚àë' n : ‚Ñï, Œº s := (Ennreal.tsum_const_eq_top_of_ne_zero h).symm _ = ‚àë' n : ‚Ñï, Œº ({u n} + s) := by
      congr 1
      ext1 n
      simp only [image_add_left, measure_preimage_add, singleton_add]_ = Œº (‚ãÉ n, {u n} + s) := by
      rw
        [measure_Union hs fun n => by
          simpa only [image_add_left, singleton_add] using measurable_id.const_add _ h's]_ = Œº (range u + s) :=
      by
      rw [‚Üê Union_add, Union_singleton_eq_range]_ < ‚àû := bounded.measure_lt_top (hu.add sb)

/-- If a set is disjoint of its translates by infinitely many bounded vectors, then it has measure
zero. -/
theorem add_haar_eq_zero_of_disjoint_translates {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] {s : Set E} (u : ‚Ñï ‚Üí E)
    (hu : Bounded (Range u)) (hs : Pairwise (Disjoint on fun n => {u n} + s)) (h's : MeasurableSet s) : Œº s = 0 := by
  suffices H : ‚àÄ R, Œº (s ‚à© closed_ball 0 R) = 0
  ¬∑ apply le_antisymm‚Çì _ (zero_le _)
    calc Œº s ‚â§ ‚àë' n : ‚Ñï, Œº (s ‚à© closed_ball 0 n) := by
        conv_lhs => rw [‚Üê Union_inter_closed_ball_nat s 0]
        exact measure_Union_le _ _ = 0 := by
        simp only [H, tsum_zero]
    
  intro R
  apply
    add_haar_eq_zero_of_disjoint_translates_aux Œº u (bounded.mono (inter_subset_right _ _) bounded_closed_ball) hu _
      (h's.inter measurable_set_closed_ball)
  apply PairwiseDisjoint.mono hs fun n => _
  exact add_subset_add (subset.refl _) (inter_subset_left _ _)

/-- A strict vector subspace has measure zero. -/
theorem add_haar_submodule {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E] [BorelSpace E]
    [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (s : Submodule ‚Ñù E) (hs : s ‚â† ‚ä§) : Œº s = 0 := by
  obtain ‚ü®x, hx‚ü© : ‚àÉ x, x ‚àâ s := by
    simpa only [Submodule.eq_top_iff', not_exists, Ne.def, not_forall] using hs
  obtain ‚ü®c, cpos, cone‚ü© : ‚àÉ c : ‚Ñù, 0 < c ‚àß c < 1 :=
    ‚ü®1 / 2, by
      norm_num, by
      norm_num‚ü©
  have A : bounded (range fun n : ‚Ñï => c ^ n ‚Ä¢ x) :=
    have : tendsto (fun n : ‚Ñï => c ^ n ‚Ä¢ x) at_top (ùìù ((0 : ‚Ñù) ‚Ä¢ x)) :=
      (tendsto_pow_at_top_nhds_0_of_lt_1 cpos.le cone).smul_const x
    bounded_range_of_tendsto _ this
  apply add_haar_eq_zero_of_disjoint_translates Œº _ A _ (Submodule.closed_of_finite_dimensional s).MeasurableSet
  intro m n hmn
  simp only [Function.onFun, image_add_left, singleton_add, disjoint_left, mem_preimage, SetLike.mem_coe]
  intro y hym hyn
  have A : (c ^ n - c ^ m) ‚Ä¢ x ‚àà s := by
    convert s.sub_mem hym hyn
    simp only [sub_smul, neg_sub_neg, add_sub_add_right_eq_sub]
  have H : c ^ n - c ^ m ‚â† 0 := by
    simpa only [sub_eq_zero, Ne.def] using (strict_anti_pow cpos cone).Injective.Ne hmn.symm
  have : x ‚àà s := by
    convert s.smul_mem (c ^ n - c ^ m)‚Åª¬π A
    rw [smul_smul, inv_mul_cancel H, one_smul]
  exact hx this

/-- A strict affine subspace has measure zero. -/
theorem add_haar_affine_subspace {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E] [BorelSpace E]
    [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (s : AffineSubspace ‚Ñù E) (hs : s ‚â† ‚ä§) : Œº s = 0 := by
  rcases s.eq_bot_or_nonempty with (rfl | hne)
  ¬∑ rw [AffineSubspace.bot_coe, measure_empty]
    
  rw [Ne.def, ‚Üê AffineSubspace.direction_eq_top_iff_of_nonempty hne] at hs
  rcases hne with ‚ü®x, hx : x ‚àà s‚ü©
  simpa only [AffineSubspace.coe_direction_eq_vsub_set_right hx, vsub_eq_sub, sub_eq_add_neg, image_add_right, neg_neg‚Çì,
    measure_preimage_add_right] using add_haar_submodule Œº s.direction hs

/-!
### Applying a linear map rescales Haar measure by the determinant

We first prove this on `Œπ ‚Üí ‚Ñù`, using that this is already known for the product Lebesgue
measure (thanks to matrices computations). Then, we extend this to any finite-dimensional real
vector space by using a linear equiv with a space of the form `Œπ ‚Üí ‚Ñù`, and arguing that such a
linear equiv maps Haar measure to Haar measure.
-/


theorem map_linear_map_add_haar_pi_eq_smul_add_haar {Œπ : Type _} [Fintype Œπ] {f : (Œπ ‚Üí ‚Ñù) ‚Üí‚Çó[‚Ñù] Œπ ‚Üí ‚Ñù} (hf : f.det ‚â† 0)
    (Œº : Measure (Œπ ‚Üí ‚Ñù)) [IsAddHaarMeasure Œº] : Measure.map f Œº = Ennreal.ofReal (abs f.det‚Åª¬π) ‚Ä¢ Œº := by
  /- We have already proved the result for the Lebesgue product measure, using matrices.
    We deduce it for any Haar measure by uniqueness (up to scalar multiplication). -/
  have := add_haar_measure_unique Œº (pi_Icc01 Œπ)
  rw [this, add_haar_measure_eq_volume_pi, measure.map_smul, Real.map_linear_map_volume_pi_eq_smul_volume_pi hf,
    smul_comm]

theorem map_linear_map_add_haar_eq_smul_add_haar {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] {f : E ‚Üí‚Çó[‚Ñù] E} (hf : f.det ‚â† 0) :
    Measure.map f Œº = Ennreal.ofReal (abs f.det‚Åª¬π) ‚Ä¢ Œº := by
  -- we reduce to the case of `E = Œπ ‚Üí ‚Ñù`, for which we have already proved the result using
  -- matrices in `map_linear_map_add_haar_pi_eq_smul_add_haar`.
  let Œπ := Fin‚Çì (finrank ‚Ñù E)
  have : FiniteDimensional ‚Ñù (Œπ ‚Üí ‚Ñù) := by
    infer_instance
  have : finrank ‚Ñù E = finrank ‚Ñù (Œπ ‚Üí ‚Ñù) := by
    simp
  have e : E ‚âÉ‚Çó[‚Ñù] Œπ ‚Üí ‚Ñù := linear_equiv.of_finrank_eq E (Œπ ‚Üí ‚Ñù) this
  -- next line is to avoid `g` getting reduced by `simp`.
  obtain ‚ü®g, hg‚ü© : ‚àÉ g, g = (e : E ‚Üí‚Çó[‚Ñù] Œπ ‚Üí ‚Ñù).comp (f.comp (e.symm : (Œπ ‚Üí ‚Ñù) ‚Üí‚Çó[‚Ñù] E)) := ‚ü®_, rfl‚ü©
  have gdet : g.det = f.det := by
    rw [hg]
    exact LinearMap.det_conj f e
  rw [‚Üê gdet] at hf‚ä¢
  have fg : f = (e.symm : (Œπ ‚Üí ‚Ñù) ‚Üí‚Çó[‚Ñù] E).comp (g.comp (e : E ‚Üí‚Çó[‚Ñù] Œπ ‚Üí ‚Ñù)) := by
    ext x
    simp only [LinearEquiv.coe_coe, Function.comp_app, LinearMap.coe_comp, LinearEquiv.symm_apply_apply, hg]
  simp only [fg, LinearEquiv.coe_coe, LinearMap.coe_comp]
  have Ce : Continuous e := (e : E ‚Üí‚Çó[‚Ñù] Œπ ‚Üí ‚Ñù).continuous_of_finite_dimensional
  have Cg : Continuous g := LinearMap.continuous_of_finite_dimensional g
  have Cesymm : Continuous e.symm := (e.symm : (Œπ ‚Üí ‚Ñù) ‚Üí‚Çó[‚Ñù] E).continuous_of_finite_dimensional
  rw [‚Üê map_map Cesymm.measurable (Cg.comp Ce).Measurable, ‚Üê map_map Cg.measurable Ce.measurable]
  have : is_add_haar_measure (map e Œº) := is_add_haar_measure_map Œº e.to_add_equiv Ce Cesymm
  have ecomp : e.symm ‚àò e = id := by
    ext x
    simp only [id.def, Function.comp_app, LinearEquiv.symm_apply_apply]
  rw [map_linear_map_add_haar_pi_eq_smul_add_haar hf (map e Œº), measure.map_smul,
    map_map Cesymm.measurable Ce.measurable, ecomp, measure.map_id]

/-- The preimage of a set `s` under a linear map `f` with nonzero determinant has measure
equal to `Œº s` times the absolute value of the inverse of the determinant of `f`. -/
@[simp]
theorem add_haar_preimage_linear_map {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E] [BorelSpace E]
    [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] {f : E ‚Üí‚Çó[‚Ñù] E} (hf : f.det ‚â† 0) (s : Set E) :
    Œº (f ‚Åª¬π' s) = Ennreal.ofReal (abs f.det‚Åª¬π) * Œº s :=
  calc
    Œº (f ‚Åª¬π' s) = Measure.map f Œº s :=
      ((f.equivOfDetNeZero hf).toContinuousLinearEquiv.toHomeomorph.toMeasurableEquiv.map_apply s).symm
    _ = Ennreal.ofReal (abs f.det‚Åª¬π) * Œº s := by
      rw [map_linear_map_add_haar_eq_smul_add_haar Œº hf]
      rfl
    

/-- The preimage of a set `s` under a continuous linear map `f` with nonzero determinant has measure
equal to `Œº s` times the absolute value of the inverse of the determinant of `f`. -/
@[simp]
theorem add_haar_preimage_continuous_linear_map {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] {f : E ‚ÜíL[‚Ñù] E}
    (hf : LinearMap.det (f : E ‚Üí‚Çó[‚Ñù] E) ‚â† 0) (s : Set E) :
    Œº (f ‚Åª¬π' s) = Ennreal.ofReal (abs (LinearMap.det (f : E ‚Üí‚Çó[‚Ñù] E))‚Åª¬π) * Œº s :=
  add_haar_preimage_linear_map Œº hf s

/-- The preimage of a set `s` under a linear equiv `f` has measure
equal to `Œº s` times the absolute value of the inverse of the determinant of `f`. -/
@[simp]
theorem add_haar_preimage_linear_equiv {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E] [BorelSpace E]
    [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (f : E ‚âÉ‚Çó[‚Ñù] E) (s : Set E) :
    Œº (f ‚Åª¬π' s) = Ennreal.ofReal (abs (f.symm : E ‚Üí‚Çó[‚Ñù] E).det) * Œº s := by
  have A : (f : E ‚Üí‚Çó[‚Ñù] E).det ‚â† 0 := (LinearEquiv.is_unit_det' f).ne_zero
  convert add_haar_preimage_linear_map Œº A s
  simp only [LinearEquiv.det_coe_symm]

/-- The preimage of a set `s` under a continuous linear equiv `f` has measure
equal to `Œº s` times the absolute value of the inverse of the determinant of `f`. -/
@[simp]
theorem add_haar_preimage_continuous_linear_equiv {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (f : E ‚âÉL[‚Ñù] E) (s : Set E) :
    Œº (f ‚Åª¬π' s) = Ennreal.ofReal (abs (f.symm : E ‚Üí‚Çó[‚Ñù] E).det) * Œº s :=

/-- The image of a set `s` under a linear map `f` has measure
equal to `Œº s` times the absolute value of the determinant of `f`. -/
@[simp]
theorem add_haar_image_linear_map {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E] [BorelSpace E]
    [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (f : E ‚Üí‚Çó[‚Ñù] E) (s : Set E) :
    Œº (f '' s) = Ennreal.ofReal (abs f.det) * Œº s := by
  rcases ne_or_eq f.det 0 with (hf | hf)
  ¬∑ let g := (f.equiv_of_det_ne_zero hf).toContinuousLinearEquiv
    change Œº (g '' s) = _
    rw [ContinuousLinearEquiv.image_eq_preimage g s, add_haar_preimage_continuous_linear_equiv]
    congr
    ext x
    simp only [LinearEquiv.coe_to_continuous_linear_equiv, LinearEquiv.of_is_unit_det_apply, LinearEquiv.coe_coe,
      ContinuousLinearEquiv.symm_symm]
    
  ¬∑ simp only [hf, zero_mul, Ennreal.of_real_zero, abs_zero]
    have : Œº f.range = 0 := add_haar_submodule Œº _ (LinearMap.range_lt_top_of_det_eq_zero hf).Ne
    exact le_antisymm‚Çì (le_trans‚Çì (measure_mono (image_subset_range _ _)) this.le) (zero_le _)
    

/-- The image of a set `s` under a continuous linear map `f` has measure
equal to `Œº s` times the absolute value of the determinant of `f`. -/
@[simp]
theorem add_haar_image_continuous_linear_map {E : Type _} [NormedGroup E] [NormedSpace ‚Ñù E] [MeasurableSpace E]
    [BorelSpace E] [FiniteDimensional ‚Ñù E] (Œº : Measure E) [IsAddHaarMeasure Œº] (f : E ‚ÜíL[‚Ñù] E) (s : Set E) :
    Œº (f '' s) = Ennreal.ofReal (abs (f : E ‚Üí‚Çó[‚Ñù] E).det) * Œº s :=

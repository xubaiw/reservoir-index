/-- Consider a point `x` at which a set `s` has density zero, with respect to closed balls. Then it
also has density zero with respect to any measurable set `t`: the proportion of points in `s`
belonging to a rescaled copy `{x} + r ‚Ä¢ t` of `t` tends to zero as `r` tends to zero. -/
theorem tendsto_add_haar_inter_smul_zero_of_density_zero (s : Set E) (x : E)
    (h : Tendsto (fun r => Œº (s ‚à© ClosedBall x r) / Œº (ClosedBall x r)) (ùìù[>] 0) (ùìù 0)) (t : Set E)
    (ht : MeasurableSet t) (h''t : Œº t ‚â† ‚àû) :
    Tendsto (fun r : ‚Ñù => Œº (s ‚à© ({x} + r ‚Ä¢ t)) / Œº ({x} + r ‚Ä¢ t)) (ùìù[>] 0) (ùìù 0) := by
  refine' tendsto_order.2 ‚ü®fun a' ha' => (Ennreal.not_lt_zero ha').elim, fun Œµpos : 0 < Œµ => _‚ü©
  rcases eq_or_ne (Œº t) 0 with (h't | h't)
  ¬∑ apply eventually_of_forall fun r => _
    suffices H : Œº (s ‚à© ({x} + r ‚Ä¢ t)) = 0
    ¬∑ rw [H]
      simpa only [Ennreal.zero_div] using Œµpos
      
    apply le_antisymm‚Çì _ (zero_le _)
    calc Œº (s ‚à© ({x} + r ‚Ä¢ t)) ‚â§ Œº ({x} + r ‚Ä¢ t) := measure_mono (inter_subset_right _ _)_ = 0 := by
        simp only [h't, add_haar_smul, image_add_left, measure_preimage_add, singleton_add, mul_zero]
    
  obtain ‚ü®n, npos, hn‚ü© : ‚àÉ n : ‚Ñï, 0 < n ‚àß Œº (t \ closed_ball 0 n) < Œµ / 2 * Œº t := by
    have A : tendsto (fun n : ‚Ñï => Œº (t \ closed_ball 0 n)) at_top (ùìù (Œº (‚ãÇ n : ‚Ñï, t \ closed_ball 0 n))) := by
      have N : ‚àÉ n : ‚Ñï, Œº (t \ closed_ball 0 n) ‚â† ‚àû := ‚ü®0, ((measure_mono (diff_subset t _)).trans_lt h''t.lt_top).Ne‚ü©
      refine' tendsto_measure_Inter (fun n => ht.diff measurable_set_closed_ball) (fun m n hmn => _) N
      exact diff_subset_diff subset.rfl (closed_ball_subset_closed_ball (Nat.cast_le.2 hmn))
    have : (‚ãÇ n : ‚Ñï, t \ closed_ball 0 n) = ‚àÖ := by
      simp_rw [diff_eq, ‚Üê inter_Inter, Inter_eq_compl_Union_compl, compl_compl, Union_closed_ball_nat, compl_univ,
        inter_empty]
    simp only [this, measure_empty] at A
    have I : 0 < Œµ / 2 * Œº t := Ennreal.mul_pos (Ennreal.half_pos Œµpos.ne').ne' h't
    exact (eventually.and (Ioi_mem_at_top 0) ((tendsto_order.1 A).2 _ I)).exists
  have L : tendsto (fun r : ‚Ñù => Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n))) / Œº ({x} + r ‚Ä¢ t)) (ùìù[>] 0) (ùìù 0) :=
    tendsto_add_haar_inter_smul_zero_of_density_zero_aux2 Œº s x h _ t h't n (Nat.cast_pos.2 npos)
      (inter_subset_right _ _)
  filter_upwards [(tendsto_order.1 L).2 _ (Ennreal.half_pos Œµpos.ne'), self_mem_nhds_within]
  rintro r hr (rpos : 0 < r)
  have I : Œº (s ‚à© ({x} + r ‚Ä¢ t)) ‚â§ Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n))) + Œº ({x} + r ‚Ä¢ (t \ closed_ball 0 n)) :=
    calc
      Œº (s ‚à© ({x} + r ‚Ä¢ t)) = Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n)) ‚à™ s ‚à© ({x} + r ‚Ä¢ (t \ closed_ball 0 n))) := by
        rw [‚Üê inter_union_distrib_left, ‚Üê add_union, ‚Üê smul_set_union, inter_union_diff]
      _ ‚â§ Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n))) + Œº (s ‚à© ({x} + r ‚Ä¢ (t \ closed_ball 0 n))) := measure_union_le _ _
      _ ‚â§ Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n))) + Œº ({x} + r ‚Ä¢ (t \ closed_ball 0 n)) :=
        add_le_add le_rfl (measure_mono (inter_subset_right _ _))
      
  calc
    Œº (s ‚à© ({x} + r ‚Ä¢ t)) / Œº ({x} + r ‚Ä¢ t) ‚â§
        (Œº (s ‚à© ({x} + r ‚Ä¢ (t ‚à© closed_ball 0 n))) + Œº ({x} + r ‚Ä¢ (t \ closed_ball 0 n))) / Œº ({x} + r ‚Ä¢ t) :=
      Ennreal.mul_le_mul I le_rfl _ < Œµ / 2 + Œµ / 2 := by
      rw [Ennreal.add_div]
      apply Ennreal.add_lt_add hr _
      rwa [add_haar_singleton_add_smul_div_singleton_add_smul Œº rpos.ne',
        Ennreal.div_lt_iff (Or.inl h't) (Or.inl h''t)]_ = Œµ :=
      Ennreal.add_halves _

theorem tendsto_add_haar_inter_smul_one_of_density_one_aux (s : Set E) (hs : MeasurableSet s) (x : E)

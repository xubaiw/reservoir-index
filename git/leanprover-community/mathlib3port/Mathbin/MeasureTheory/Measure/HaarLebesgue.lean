/-!
### Basic properties of Haar measures on real vector spaces
-/


variable {E : Type _} [NormedGroup E] [MeasurableSpace E] [NormedSpace ‚Ñù E] [FiniteDimensional ‚Ñù E] [BorelSpace E]
  (Œº : Measure E) [IsAddHaarMeasure Œº]

theorem map_add_haar_smul {r : ‚Ñù} (hr : r ‚â† 0) :
    Measure.map ((¬∑ ‚Ä¢ ¬∑) r) Œº = Ennreal.ofReal (abs (r ^ finrank ‚Ñù E)‚Åª¬π) ‚Ä¢ Œº := by
  let f : E ‚Üí‚Çó[‚Ñù] E := r ‚Ä¢ 1
  change measure.map f Œº = _
  have hf : f.det ‚â† 0 := by
    simp only [mul_one‚Çì, LinearMap.det_smul, Ne.def, MonoidHom.map_one]
    intro h
    exact hr (pow_eq_zero h)
  simp only [map_linear_map_add_haar_eq_smul_add_haar Œº hf, mul_one‚Çì, LinearMap.det_smul, MonoidHom.map_one]

@[simp]
theorem add_haar_preimage_smul {r : ‚Ñù} (hr : r ‚â† 0) (s : Set E) :
    Œº ((¬∑ ‚Ä¢ ¬∑) r ‚Åª¬π' s) = Ennreal.ofReal (abs (r ^ finrank ‚Ñù E)‚Åª¬π) * Œº s :=
  calc
    Œº ((¬∑ ‚Ä¢ ¬∑) r ‚Åª¬π' s) = Measure.map ((¬∑ ‚Ä¢ ¬∑) r) Œº s :=
      ((Homeomorph.smul (is_unit_iff_ne_zero.2 hr).Unit).toMeasurableEquiv.map_apply s).symm
    _ = Ennreal.ofReal (abs (r ^ finrank ‚Ñù E)‚Åª¬π) * Œº s := by
      rw [map_add_haar_smul Œº hr]
      rfl
    

/-- Rescaling a set by a factor `r` multiplies its measure by `abs (r ^ dim)`. -/
@[simp]
theorem add_haar_smul (r : ‚Ñù) (s : Set E) : Œº (r ‚Ä¢ s) = Ennreal.ofReal (abs (r ^ finrank ‚Ñù E)) * Œº s := by
  rcases ne_or_eq r 0 with (h | rfl)
  ¬∑ rw [‚Üê preimage_smul_inv‚ÇÄ h, add_haar_preimage_smul Œº (inv_ne_zero h), inv_pow, inv_inv‚Çì]
    
  rcases eq_empty_or_nonempty s with (rfl | hs)
  ¬∑ simp only [measure_empty, mul_zero, smul_set_empty]
    
  rw [zero_smul_set hs, ‚Üê singleton_zero]
  by_cases' h : finrank ‚Ñù E = 0
  ¬∑ have : Subsingleton E := finrank_zero_iff.1 h
    simp only [h, one_mul‚Çì, Ennreal.of_real_one, abs_one, Subsingleton.eq_univ_of_nonempty hs, pow_zero‚Çì,
      Subsingleton.eq_univ_of_nonempty (singleton_nonempty (0 : E))]
    
  ¬∑ have : Nontrivial E := nontrivial_of_finrank_pos (bot_lt_iff_ne_bot.2 h)
    simp only [h, zero_mul, Ennreal.of_real_zero, abs_zero, Ne.def, not_false_iff, zero_pow', measure_singleton]
    

@[simp]

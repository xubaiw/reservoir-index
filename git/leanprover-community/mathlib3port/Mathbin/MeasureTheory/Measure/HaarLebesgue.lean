  rintro r (rpos : 0 < r)
  have T : (R * r) ‚Ä¢ t' = r ‚Ä¢ t := by
    rw [mul_comm, ht', smul_smul, mul_assoc, mul_inv_cancel Rpos.ne', mul_one‚Çì]
  have U : (R * r) ‚Ä¢ u' = r ‚Ä¢ u := by
    rw [mul_comm, hu', smul_smul, mul_assoc, mul_inv_cancel Rpos.ne', mul_one‚Çì]

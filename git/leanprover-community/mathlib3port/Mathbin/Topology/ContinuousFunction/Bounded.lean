  Module.ofCore <|
    { smul := (¬∑ ‚Ä¢ ¬∑), smul_add := fun c f‚ÇÅ f‚ÇÇ => ext fun x => smul_add _ _ _,
      add_smul := fun c‚ÇÅ c‚ÇÇ f => ext fun x => add_smul _ _ _, mul_smul := fun c‚ÇÅ c‚ÇÇ f => ext fun x => mul_smul _ _ _,

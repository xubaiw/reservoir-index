theorem HasPdf.measurable {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©)
    (Œº : Measure E := by
      run_tac
        volume_tac)
    [hX : HasPdf X ‚Ñô Œº] : Measurable X :=
  hX.pdf'.1

/-- If `X` is a random variable that `has_pdf X ‚Ñô Œº`, then `pdf X` is the measurable function `f`
such that the push-forward measure of `‚Ñô` along `X` equals `Œº.with_density f`. -/
def pdf {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©)
    (Œº : Measure E := by
      run_tac
        volume_tac) :=
  if hX : HasPdf X ‚Ñô Œº then Classical.some hX.pdf'.2 else 0

theorem pdf_undef {m : MeasurableSpace Œ©} {‚Ñô : Measure Œ©} {Œº : Measure E} {X : Œ© ‚Üí E} (h : ¬¨HasPdf X ‚Ñô Œº) :
    pdf X ‚Ñô Œº = 0 := by
  simp only [pdf, dif_neg h]

theorem has_pdf_of_pdf_ne_zero {m : MeasurableSpace Œ©} {‚Ñô : Measure Œ©} {Œº : Measure E} {X : Œ© ‚Üí E} (h : pdf X ‚Ñô Œº ‚â† 0) :
    HasPdf X ‚Ñô Œº := by
  by_contra hpdf
  rw [pdf, dif_neg hpdf] at h
  exact hpdf (False.ndrec (has_pdf X ‚Ñô Œº) (h rfl))

theorem pdf_eq_zero_of_not_measurable {m : MeasurableSpace Œ©} {‚Ñô : Measure Œ©} {Œº : Measure E} {X : Œ© ‚Üí E}
    (hX : ¬¨Measurable X) : pdf X ‚Ñô Œº = 0 :=
  pdf_undef fun hpdf => hX hpdf.pdf'.1

theorem measurable_of_pdf_ne_zero {m : MeasurableSpace Œ©} {‚Ñô : Measure Œ©} {Œº : Measure E} (X : Œ© ‚Üí E)
    (h : pdf X ‚Ñô Œº ‚â† 0) : Measurable X := by
  by_contra hX
  exact h (pdf_eq_zero_of_not_measurable hX)

@[measurability]
theorem measurable_pdf {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©)
    (Œº : Measure E := by
      run_tac
        volume_tac) :
    Measurable (pdf X ‚Ñô Œº) := by
  by_cases' hX : has_pdf X ‚Ñô Œº
  ¬∑ rw [pdf, dif_pos hX]
    exact (Classical.some_spec hX.pdf'.2).1
    
  ¬∑ rw [pdf, dif_neg hX]
    exact measurable_zero
    

theorem map_eq_with_density_pdf {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©)
    (Œº : Measure E := by
      run_tac
        volume_tac)
    [hX : HasPdf X ‚Ñô Œº] : Measure.map X ‚Ñô = Œº.withDensity (pdf X ‚Ñô Œº) := by
  rw [pdf, dif_pos hX]
  exact (Classical.some_spec hX.pdf'.2).2

theorem map_eq_set_lintegral_pdf {m : MeasurableSpace Œ©} (X : Œ© ‚Üí E) (‚Ñô : Measure Œ©)
    (Œº : Measure E := by

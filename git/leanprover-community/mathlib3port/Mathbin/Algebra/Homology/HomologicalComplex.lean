/-- Either `C.X i`, if there is some `i` with `c.rel i j`, or `C.X j`. -/
abbrev xPrev (j : Œπ) : V :=
  C.x (c.prev j)

/-- If `c.rel i j`, then `C.X_prev j` is isomorphic to `C.X i`. -/
def xPrevIso {i j : Œπ} (r : c.Rel i j) : C.xPrev j ‚âÖ C.x i :=
  eq_to_iso <| by
    rw [‚Üê c.prev_eq' r]

/-- If there is no `i` so `c.rel i j`, then `C.X_prev j` is isomorphic to `C.X j`. -/
def xPrevIsoSelf {j : Œπ} (h : ¬¨c.Rel (c.prev j) j) : C.xPrev j ‚âÖ C.x j :=
  eq_to_iso <|
    congr_arg C.x
      (by
        dsimp' [‚Üê ComplexShape.prev]
        rw [dif_neg]
        push_neg
        intro i hi
        have : c.prev j = i := c.prev_eq' hi
        rw [this] at h
        contradiction)

/-- Either `C.X j`, if there is some `j` with `c.rel i j`, or `C.X i`. -/
abbrev xNext (i : Œπ) : V :=
  C.x (c.next i)

/-- If `c.rel i j`, then `C.X_next i` is isomorphic to `C.X j`. -/
def xNextIso {i j : Œπ} (r : c.Rel i j) : C.xNext i ‚âÖ C.x j :=
  eq_to_iso <| by
    rw [‚Üê c.next_eq' r]

/-- If there is no `j` so `c.rel i j`, then `C.X_next i` is isomorphic to `C.X i`. -/
def xNextIsoSelf {i : Œπ} (h : ¬¨c.Rel i (c.next i)) : C.xNext i ‚âÖ C.x i :=
  eq_to_iso <|
    congr_arg C.x
      (by
        dsimp' [‚Üê ComplexShape.next]
        rw [dif_neg]
        rintro ‚ü®j, hj‚ü©
        have : c.next i = j := c.next_eq' hj
        rw [this] at h
        contradiction)

/-- The differential mapping into `C.X j`, or zero if there isn't one.
-/
abbrev dTo (j : Œπ) : C.xPrev j ‚ü∂ C.x j :=
  C.d (c.prev j) j

/-- The differential mapping out of `C.X i`, or zero if there isn't one.
-/
abbrev dFrom (i : Œπ) : C.x i ‚ü∂ C.xNext i :=
  C.d i (c.next i)

theorem d_to_eq {i j : Œπ} (r : c.Rel i j) : C.dTo j = (C.xPrevIso r).Hom ‚â´ C.d i j := by
  obtain rfl := c.prev_eq' r
  exact (category.id_comp _).symm

@[simp]
theorem d_to_eq_zero {j : Œπ} (h : ¬¨c.Rel (c.prev j) j) : C.dTo j = 0 :=
  C.shape _ _ h

theorem d_from_eq {i j : Œπ} (r : c.Rel i j) : C.dFrom i = C.d i j ‚â´ (C.xNextIso r).inv := by
  obtain rfl := c.next_eq' r
  exact (category.comp_id _).symm

@[simp]
theorem d_from_eq_zero {i : Œπ} (h : ¬¨c.Rel i (c.next i)) : C.dFrom i = 0 :=
  C.shape _ _ h

@[simp, reassoc]
theorem X_prev_iso_comp_d_to {i j : Œπ} (r : c.Rel i j) : (C.xPrevIso r).inv ‚â´ C.dTo j = C.d i j := by
  simp [‚Üê C.d_to_eq r]

@[simp, reassoc]
theorem X_prev_iso_self_comp_d_to {j : Œπ} (h : ¬¨c.Rel (c.prev j) j) : (C.xPrevIsoSelf h).inv ‚â´ C.dTo j = 0 := by
  simp [‚Üê h]

@[simp, reassoc]
theorem d_from_comp_X_next_iso {i j : Œπ} (r : c.Rel i j) : C.dFrom i ‚â´ (C.xNextIso r).Hom = C.d i j := by
  simp [‚Üê C.d_from_eq r]

@[simp, reassoc]
theorem d_from_comp_X_next_iso_self {i : Œπ} (h : ¬¨c.Rel i (c.next i)) : C.dFrom i ‚â´ (C.xNextIsoSelf h).Hom = 0 := by
  simp [‚Üê h]

@[simp]
theorem d_to_comp_d_from (j : Œπ) : C.dTo j ‚â´ C.dFrom j = 0 :=
  C.d_comp_d _ _ _

theorem kernel_from_eq_kernel [HasKernels V] {i j : Œπ} (r : c.Rel i j) :
    kernelSubobject (C.dFrom i) = kernelSubobject (C.d i j) := by
  rw [C.d_from_eq r]
  apply kernel_subobject_comp_mono

theorem image_to_eq_image [HasImages V] [HasEqualizers V] {i j : Œπ} (r : c.Rel i j) :
    imageSubobject (C.dTo j) = imageSubobject (C.d i j) := by
  rw [C.d_to_eq r]
  apply image_subobject_iso_comp

end

